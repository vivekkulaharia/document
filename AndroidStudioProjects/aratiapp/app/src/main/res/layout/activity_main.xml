<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.aratiapp.MainActivity"
    android:background="@drawable/gaudiyamutt1"
    android:id="@+id/a">

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:id="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:background="@drawable/prabhupada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Prabhupada Arati"
        android:id="@+id/textView"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageButton"
        android:textColor="#f41212"
        android:textSize="16dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/narshimadev"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/krishna"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Narshimadev Arati"
        android:id="@+id/textView2"
        android:gravity="fill_horizontal"
        android:textColor="#030360"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_below="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mangal Arati"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3"
        android:gravity="center_horizontal"
        android:textColor="#ec0909"
        android:textSize="18dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:background="@drawable/tulsi1"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tulsi Arati"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentStart="true"
        android:textColor="#0c3c07"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>
