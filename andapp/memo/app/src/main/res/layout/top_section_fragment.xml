<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btn"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etTopTextInput"
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            android:layout_alignEnd="@+id/btn"
            android:layout_alignStart="@+id/btn" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etBottomTextInput"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/etTopTextInput"
            android:layout_alignStart="@+id/etTopTextInput"
            android:layout_alignEnd="@+id/etTopTextInput" />

    </RelativeLayout>
</LinearLayout>